.loading_page
	animation: fade-in .3s
	background-color: rgba(#000, .7)
	bottom: 0
	left: 0
	position: fixed
	right: 0
	text-align: center
	top: 0
	transition: .3s ease-in-out all
	z-index: 9999
	-weblit-transition: .3s ease-in-out all

	.loading_wrap
		position: relative
		transform: rotate(45deg)

	.rocket_holder
		animation: travel 4s infinite
		height: 120px
		margin-top: calc(50vh - 50px)
		transform: rotate(-45deg) scale(.9)
		width: 120px

		path.rocket_svg__orbit
			fill: transparent

		path.rocket_svg__ellipse
			fill: transparent
			stroke: #00164d
			stroke-width: 4px

		path.rocket_svg__body
			animation: vibration .3s infinite
			transform-origin: 50% 50%

		path.rocket_svg__star
			animation: vibration .3s infinite
			fill: rgba(#FFF, .3)
			transform: rotate(-45deg)
			transform-origin: 50% 50%

		path.rocket_svg__fire
			animation: fire .3s infinite
			transform-origin: 50% 50%

.loading_page
	.universe
		background-color: #0c1d47
		border-radius: 50%
		height: 40vh
		left: 0
		left: calc(50% - 20vh)
		min-height: 140px
		min-width: 140px
		position: absolute
		top: 0
		top: calc(50% - 20vh)
		width: 40vh

@keyframes vibration
	0%
		transform: translate(0, 0)

	0%
		transform: translate(6px, -6px) scale(1.1)

	100%
		transform: translate(0, 0)

@keyframes travel
	20%
		transform: translate(0, 0) scale(1) rotate(-45deg)

	50%
		transform: translate(50px, -80px) scale(1.4) rotate(-45deg)

	80%
		transform: translate(120px, -90px) scale(1.5) rotate(-45deg)

	95%
		transform: translate(-10d 0, -40px) rotate(-45deg)

	100%
		transform: translate(0, 0) scale(.8) rotate(-45deg)

@keyframes fire
	0%
		opacity: .1
		transform: translate(0, 0)

	0%
		opacity: .5
		transform: translate(14px, 14px)

	0%
		transform: translate(-10px, -10px) scale(1.1, .8)

	30%
		transform: translate(-10px, 10px) scale(.8, 1.1)

	100%
		opacity: 1
		transform: translate(0, 0)

